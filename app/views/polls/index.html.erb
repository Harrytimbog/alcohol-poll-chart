<div class="container-fluid m-2">
  <div class="row">
    <div class="col-12 col-md-5 offset-1">
      <p id="notice"><%= notice %></p>
      <h1 class="text-center">Polls</h1>
      <table id='poll-table' class="table table-dark table-hover">
        <thead class="thead-light">
          <tr>
            <th>Name</th>
            <th>Alcohol</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @polls.each do |poll| %>
            <tr>
              <td><%= poll.name %></td>
              <td><%= poll.alcohol %></td>
              <td><%= link_to 'Show', poll %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-12 col-md-6">
      <%= pie_chart [["Yes", Poll.where(alcohol: "yes").count], ["No", Poll.where(alcohol: "no").count]], id:'polls'%>
    </div>
  </div>


 <div class="row mt-5">
  <div class='col-11 offset-1 col-sm-4'>
    <h3 class="text-center">New poll</h3>
    <%= render 'form', poll: @poll %>
  </div>
</div>
</div>
